 <!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <%- include('./components/navbar-admin.ejs') %>

    

    <div class="container" style="margin: 2rem;">
        <h1>Books List</h1>
        <a href="/books/add" class="btn btn-outline-primary">Add Book</a>
    </div>

    <div class="container" style="margin-bottom: 2rem;">
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" name="search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Author</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% dataBook.forEach((item) => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.title %></td>
                        <td><%= item.genre %></td>
                        <td><%= item.Author.name %></td>
                        <td>
                            <a href="/reads/<%= item.id %>" class="btn btn-outline-success">Info</a>
                            <a href="/books/edit/<%= item.id %>" class="btn btn-outline-warning">Edit</a>
                            <a href="/books/delete/<%= item.id %>" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
                
            </tbody>
          </table>
    </div>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>